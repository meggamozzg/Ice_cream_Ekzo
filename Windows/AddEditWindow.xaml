<Window x:Class="Ice_cream_Ekzo.Windows.AddEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ice_cream_Ekzo.Windows"
        mc:Ignorable="d"
        Title="AddEditWindow" Height="450" Width="800"
        Background="{StaticResource SecondBackground}">
    <Grid>
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Style="{StaticResource Text}"
                               Text="Тип"
                               Margin="0 0 380 0"
                               TextAlignment="Center"></TextBlock>
                    <ComboBox Style="{StaticResource Combo}"
                              Width="250"></ComboBox>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock Style="{StaticResource Text}"
                               Text="Наименование компании"
                               Margin="0 0 180 0"
                               TextAlignment="Center"></TextBlock>
                    <TextBox Style="{StaticResource Textbox}"
                            Width="250"></TextBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Style="{StaticResource Text}"
                               Text="Юридический адрес"
                               Margin="0 0 220 0"
                               TextAlignment="Center"></TextBlock>
                    <TextBox Style="{StaticResource Textbox}"
                                Width="250"></TextBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Style="{StaticResource Text}"
                               Text="ИНН"
                               Margin="0 0 370 0"
                               TextAlignment="Center"></TextBlock>
                    <TextBox Style="{StaticResource Textbox}"
                                Width="250"></TextBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Style="{StaticResource Text}"
                               Text="ФИО директора"
                               Margin="0 0 265 0"
                               TextAlignment="Center"></TextBlock>
                    <TextBox Style="{StaticResource Textbox}"
                                Width="250"></TextBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Style="{StaticResource Text}"
                               Text="Контактные данные (телефон, email)"
                               Margin="0 0 80 0"
                               TextAlignment="Center"></TextBlock>
                    <TextBox Style="{StaticResource Textbox}"
                                Width="250"></TextBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Style="{StaticResource Text}"
                               Text="Логотип"
                               Margin="0 0 335 0"
                               TextAlignment="Center"></TextBlock>
                    <TextBox Style="{StaticResource Textbox}"
                                Width="250"></TextBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Style="{StaticResource Text}"
                               Text="Рейтинг"
                               Margin="0 0 340 0"
                               TextAlignment="Center"></TextBlock>
                    <TextBox Style="{StaticResource Textbox}"
                                Width="250"></TextBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Style="{StaticResource Text}"
                               Text="Места продаж"
                               Margin="0 0 280 0"
                               TextAlignment="Center"></TextBlock>
                    <TextBox Style="{StaticResource Textbox}"
                                Width="250"></TextBox>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Style="{StaticResource Text}"
                               Text="Юридический адрес"
                               Margin="0 0 220 0"
                               TextAlignment="Center"></TextBlock>
                    <TextBox Style="{StaticResource Textbox}"
                                Width="250"></TextBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Style="{StaticResource Text}"
                               Text="История реализации продукции"
                               Margin="0 0 110 0"
                               TextAlignment="Center"></TextBlock>
                    <TextBox Style="{StaticResource Textbox}"
                                Width="250"></TextBox>
                </StackPanel>
            </StackPanel>

            <Button Style="{StaticResource Button}"
                    Content="Сохранить"
                    Width="200"
                    Height="60"
                    Margin="10"></Button>
        </StackPanel>

        
    </Grid>
</Window>
