<Page x:Class="Ice_cream_Ekzo.Pages.PartnerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ice_cream_Ekzo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Партнёры"
      Background="Blue">

    <Grid>
        <ListView>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical"></StackPanel>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border>
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource Text}"
                                           Text="Тип"></TextBlock>
                                <TextBlock Style="{StaticResource Text}"
                                           Text="|"
                                           Margin="5"></TextBlock>
                                <TextBlock Style="{StaticResource Text}"
                                           Text="Наименование компании"></TextBlock>
                            </StackPanel>

                            <TextBlock Text="ФИО директора"></TextBlock>
                            
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource Text}"
                                           Text="Телефон/Email: "></TextBlock>
                                <TextBlock Style="{StaticResource Text}"
                                           Text="тырыпыры"
                                           Margin="5"></TextBlock>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource Text}"
                                           Text="Рейтинг: "></TextBlock>
                                <TextBlock Style="{StaticResource Text}"
                                           Text="тырыпыры"
                                           Margin="5"></TextBlock>
                            </StackPanel>

                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
